<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardBackgroundColor="#dcd6f7"
    android:elevation="10dp"
    android:background="@drawable/shadow_effect"
    app:cardCornerRadius="20dp"
    app:cardUseCompatPadding="true">



    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/crime_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="name sdsdsdfsdf"
                android:textColor="#424874"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/crime_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/crime_name"
                android:text="name"
                android:textColor="#585f93"
                android:textSize="10sp"
                tools:text="South Andaman Island" />


        <TextView
            android:id="@+id/crime_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/crime_area"
            android:text="name"
            android:textColor="#585f93"
            android:textSize="10sp"
            tools:text="South Andaman Island" />

            <TextView
                android:id="@+id/crime_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/crime_area"
                android:layout_alignTop="@id/crime_area"
                android:layout_alignParentEnd="true"
                android:text="Priority: 2"
                android:textColor="#585f93"
                android:textSize="10sp"/>


            <TextView
                android:id="@+id/c_species_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/crime_type"
                android:text="name"
                android:textColor="#585f93"
                android:textSize="10sp"
                tools:text="South Andaman Island" />


        </RelativeLayout>


</android.support.v7.widget.CardView>