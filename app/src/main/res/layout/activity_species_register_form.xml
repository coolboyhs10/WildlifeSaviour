<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".SpeciesRegisterForm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:paddingBottom="25dp"
        android:paddingTop="20dp">


        <TextView
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Heading"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/t_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Select date"
                android:inputType="date"
                android:layout_weight="2"
                />

            <Button
                android:id="@+id/date_pck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Date"
                android:layout_weight="0.3"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/t_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Select time"
                android:inputType="time"
                android:layout_weight="2"
                />

            <Button
                android:id="@+id/time_pck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Time"
                android:layout_weight="0.3"/>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="1. Species Info"/>

        <EditText
            android:id="@+id/local_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter local nickname"
            android:layout_marginTop="20dp"
            android:inputType="text"/>

        <Spinner
            android:id="@+id/common_name"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:spinnerMode="dialog"
            android:entries="@array/flora_common_name"/>


        <Spinner
            android:id="@+id/prev_seen"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:spinnerMode="dialog"
            android:entries="@array/prev_seen">
        </Spinner>

        <Spinner
            android:id="@+id/gender"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:spinnerMode="dialog"
            android:entries="@array/gender"/>

        <EditText
            android:id="@+id/age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Enter age (approx.)"
            android:inputType="number"/>


        <Spinner
            android:id="@+id/growth"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:spinnerMode="dialog"
            android:entries="@array/growth"/>

        <Spinner
            android:id="@+id/health"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:spinnerMode="dialog"
            android:entries="@array/fauna_health"/>


        <Spinner
            android:id="@+id/death_cause"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:spinnerMode="dialog"
            android:entries="@array/fauna_death"/>

        <EditText
            android:id="@+id/description"
            android:layout_height="wrap_content"
            android:hint="Other Description"
            android:inputType="textMultiLine"
            android:layout_marginTop="20dp"
            android:lines="3"
            android:layout_width="match_parent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="2. Areal Info"/>

        <EditText
            android:id="@+id/area_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Enter Area name"
            android:inputType="text"/>

        <EditText
            android:id="@+id/lat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Enter Latitude"
            android:inputType="numberDecimal"/>


        <EditText
            android:id="@+id/lon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Enter Longitude"
            android:inputType="numberDecimal"/>


        <Button
            android:id="@+id/b_save"
            android:layout_width="199dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:textColor="#3c4245"
            android:layout_gravity="center"
            android:background="@drawable/button"
            android:backgroundTint="@color/colorTransparentWhite"
            android:text="Save in diary"/>


    </LinearLayout>

</ScrollView>