<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".DiaryActivity">


    <TextView
        android:id="@+id/h_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="Your Diary"/>



    <Button
        android:id="@+id/b_view"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/h_t"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button"
        android:backgroundTint="#eeeeee"
        android:textColor="#303030"
        android:text="View diary"/>



    <TextView
        android:id="@+id/h_t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/b_view"
        android:layout_marginStart="15dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Write in diary:"/>

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/h_t1"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b_reg_fauna"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textColor="#f8f8f8"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:backgroundTint="#438a5e"
            android:text="Fauna Diary"/>

        <Button
            android:id="@+id/b_reg_flora"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textColor="#f8f8f8"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:backgroundTint="#cdb30c"
            android:text="Flora Diary"/>

    </LinearLayout>


</RelativeLayout>