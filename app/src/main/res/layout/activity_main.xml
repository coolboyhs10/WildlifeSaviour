<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".LoginActivity">

    <Button
        android:id="@+id/test"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="#3c4245"
        android:background="@drawable/button"
        android:backgroundTint="@color/colorTransparentWhite"
        android:text="Test Not"
        />

    <Button
        android:id="@+id/b_fauna"
        android:layout_width="199dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:textColor="#3c4245"
        android:background="@drawable/button"
        android:backgroundTint="@color/colorTransparentWhite"
        android:text="View Fauna Hotspots"/>


    <Button
        android:id="@+id/b_flora"
        android:layout_width="199dp"
        android:layout_height="70dp"
        android:layout_below="@id/b_fauna"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="#3c4245"
        android:background="@drawable/button"
        android:backgroundTint="@color/colorTransparentWhite"
        android:text="View Flora Hotspots"/>


</RelativeLayout>