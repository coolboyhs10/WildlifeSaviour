<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="15dp"
    app:cardBackgroundColor="#dcd6f7"
    android:elevation="10dp"
    android:padding="20dp"
    android:background="@drawable/shadow_effect"
    app:cardCornerRadius="20dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/species_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:src="@drawable/camera" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_weight="2">

            <TextView
                android:id="@+id/species_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="name sdsdsdfsdf"
                android:textColor="#424874"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/family"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/species_name"
                android:text="name"
                android:textColor="#585f93"
                android:textSize="10sp"
                tools:text="South Andaman Island" />

            <TextView
                android:id="@+id/priority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/family"
                android:text="Priority: 2"
                android:textColor="#585f93"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/sites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/priority"
                android:text="name"
                android:textColor="#585f93"
                android:textSize="10sp"
                tools:text="South Andaman Island" />



        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>