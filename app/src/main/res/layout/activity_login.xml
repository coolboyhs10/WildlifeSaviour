<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/slider3"
    tools:context=".LoginActivity">

    <EditText
        android:id="@+id/mobilenotext"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="142dp"
        android:hint="Enter mobile number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/otpbtn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/mobilenotext"
        android:alpha="0.8"
        android:background="@drawable/button"
        android:backgroundTint="@color/colorWhite"
        android:text="Get OTP"
        android:textColor="#3c4245"
        />

    <EditText
        android:id="@+id/otptext"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@id/otpbtn"
        android:hint="Enter OTP" />



    <Button
        android:id="@+id/registerbtn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:alpha="0.8"
        android:layout_below="@id/spinner"
        android:background="@drawable/button"
        android:layout_marginTop="90dp"
        android:backgroundTint="@color/colorWhite"

        android:text="Login"
        android:textColor="#3c4245"

        />

    <Button
        android:id="@+id/anonymousloginbtn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"

        android:alpha="0.8"
        android:background="@drawable/button"
        android:text="SKIP >>"
        android:backgroundTint="#f0134d"
        android:textColor="#eeeeee"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="369dp"
        android:text="Region"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/reg"
        app:layout_constraintTop_toBottomOf="@+id/otptext" />


</RelativeLayout>